<Page x:ConnectionId='1'
    x:Class="it_tools.Presentation.Views.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:it_tools.Presentation.Views"
    xmlns:local1="using:it_tools.DataAccess.Models"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    mc:Ignorable="d"
    Background="AliceBlue"
    >

    <Grid
        
        >
        <NavigationView x:ConnectionId='2' x:Name="NavView"
                       
                                                                            
                                                       >

            <!-- Thêm thanh tìm kiếm vào Header -->
            <NavigationView.Header>
                <AutoSuggestBox x:ConnectionId='3' x:Name="SearchBox"
                                
                    PlaceholderText="Tìm kiếm..."
                                                       
                                                
                                />
            </NavigationView.Header>

            <NavigationView.MenuItemTemplate>
                <DataTemplate                                 >
                    <NavigationViewItem x:ConnectionId='5'                                                   />
                </DataTemplate>
            </NavigationView.MenuItemTemplate>
            <NavigationView.PaneFooter>
                <NavigationViewItem x:ConnectionId='6' Content="Account" Tag="Account" x:Name="TaskbarAccount"                               >
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xEF58;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
            </NavigationView.PaneFooter>
            <Frame x:ConnectionId='7' x:Name="ContentFrame"/>
            
        </NavigationView>
    </Grid>
</Page>

