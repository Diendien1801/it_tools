<Page x:ConnectionId='1'
    x:Class="it_tools.Presentation.Views.ManagerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:it_tools.Presentation.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local1="using:it_tools.DataAccess.Models"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <ScrollViewer>
        <StackPanel Padding="20" Spacing="20">

            <StackPanel Margin="0,30,0,0" Padding="10" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" CornerRadius="10">
                <TextBlock Text="Thêm công cụ mới" FontSize="20" FontWeight="Bold" Margin="0,0,0,10" />

                <!-- Tên công cụ -->
                <TextBlock Text="Tên công cụ:"/>
                <TextBox x:ConnectionId='22' x:Name="ToolNameTextBox" PlaceholderText="Nhập tên tool" Margin="0,5,0,10"/>

                <!-- Mô tả -->
                <TextBlock Text="Mô tả:"/>
                <TextBox x:ConnectionId='23' x:Name="ToolDescriptionTextBox" PlaceholderText="Nhập mô tả tool" Margin="0,5,0,10"/>
                
                <!-- Tool type -->
                <TextBlock Text="Loại công cụ:" />
                <ComboBox x:ConnectionId='24' x:Name="ToolTypeComboBox"
                                                                                
                                                                                       
                    DisplayMemberPath="name"
                     Width="200"
                    Margin="0,5,0,10"/>
                <!-- Loại quyền truy cập -->
                <TextBlock Text="Quyền truy cập:"/>
                <ComboBox x:ConnectionId='25' x:Name="AccessLevelComboBox" Width="200" Margin="0,5,0,10">
                    <ComboBoxItem Content="user" />
                    <ComboBoxItem Content="premium" />
                    <ComboBoxItem Content="anonymous" />
                </ComboBox>

                <!-- Chọn file DLL -->
                <TextBlock Text="Chọn file DLL:"/>
                <StackPanel Orientation="Horizontal" Spacing="10" Margin="0,5,0,10">
                    <TextBox x:ConnectionId='28' x:Name="DllPathTextBox" IsReadOnly="True" Width="300"/>
                    <Button x:ConnectionId='29' Content="Chọn file"                        />
                </StackPanel>

                <!-- Icon URL -->
                <TextBlock Text="Icon URL (nếu có):"/>
                <TextBox x:ConnectionId='26' x:Name="IconUrlTextBox" PlaceholderText="https://example.com/icon.png" Margin="0,5,0,10"/>

                <!-- Nút Thêm -->
                <Button x:ConnectionId='27' Content="Thêm công cụ"                       Background="Green" Foreground="White" />
            </StackPanel>

            <!-- Danh sách Upgrade Requests -->
            <TextBlock Text="Danh sách yêu cầu nâng cấp" FontSize="20" FontWeight="Bold"/>
            <ListView x:ConnectionId='2' x:Name="RequestListView"
                                                                            >
                <ListView.ItemTemplate>
                    <DataTemplate                                   >
                        <Border x:ConnectionId='13' BorderBrush="White" BorderThickness="1" Margin="5" Padding="10">
                            <StackPanel>
                                <TextBlock x:ConnectionId='14'                           />
                                <TextBlock x:ConnectionId='15'                          />
                                <TextBlock x:ConnectionId='16'                       />
                                <TextBlock x:ConnectionId='17'                        />
                                <TextBlock x:ConnectionId='18'                           />
                                <TextBlock x:ConnectionId='19'                           />
                                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                    <Button x:ConnectionId='20' Content="Accept"                          Margin="0,0,10,0"                     />
                                    <Button x:ConnectionId='21' Content="Reject"                                              />
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <!-- Danh sách Tool -->
            <TextBlock Text="Danh sách công cụ" FontSize="20" FontWeight="Bold" Margin="0,20,0,0"/>
            <ListView x:ConnectionId='3' x:Name="ToolListView"
                                                                         >
                <ListView.ItemTemplate>
                    <DataTemplate                         >
                        <Border x:ConnectionId='5' BorderBrush="White" BorderThickness="1" Margin="5" Padding="10">
                            <StackPanel>
                                <TextBlock x:ConnectionId='6'                      FontWeight="Bold"/>
                                <TextBlock Text="Trạng thái:"/>
                                <TextBlock x:ConnectionId='7'                        Foreground="DarkGreen"/>

                                <TextBlock Text="Quyền truy cập:" Margin="0,5,0,0"/>
                                <ComboBox x:ConnectionId='8'                                                   
                                                                
                                            SelectedValuePath="Content"
                                                                                                   
                                            Width="200">
                                    <ComboBoxItem Content="user"/>
                                    <ComboBoxItem Content="premium"/>
                                    <ComboBoxItem Content="anonymous"/>
                                </ComboBox>

                                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                    <Button x:ConnectionId='9' Content="Enable"                       Margin="0,0,10,0"                         />
                                    <Button x:ConnectionId='10' Content="Disable"                                                />
                                    <Button x:ConnectionId='11' Content="Delete"                                               />

                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

        </StackPanel>
    </ScrollViewer>
</Page>

